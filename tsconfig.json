{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"outDir": "out/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2015",
		"declaration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
		"Gruntfile.ts",
		"build/**/*.ts",
		"src/**/*.ts",
		"typings/**/*.d.ts"
	]
}
